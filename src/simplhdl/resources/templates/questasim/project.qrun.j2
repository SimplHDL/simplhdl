-reflib {{library.Name}}
{% endfor %}
{% for fileset in filesets %}
-makelib {{fileset.VHDLLibrary.Name}}:{{fileset.VHDLLibrary.Path}}
{% for file in fileset.GetFiles() %}

{% if isinstance(file, (SystemVerilogSourceFile, VerilogSourceFile, VHDLSourceFile)) and 'simulation' in file[UsedIn] %}
	{{file.Path}}
{% endif %}
{% endfor %}
-endlib
{% endfor %}
